<html>
    <head>

    </head>
    <body>
        <div>
            <h1>Login </h1>
            <form action="/login" method="post">
                <input required name="username" placeholder="Username"/>
                <input required name="password" placeholder="password"/>
                <input type="submit" value="login"/>
            </form>
            <%if(error){%>
                <h1><%=error%></h1>
            <%}%>
            <a href="/signup">
                <p>Create an Account</p>
            </a>
            <a href="/">
                <p>Home</p>
            </a>
            <a href="/reset">
                <p>Forgot password?</p>
            </a>
        </div>
    </body>
</html>